  <script>
    // Atualiza ano
    document.getElementById('year').textContent = new Date().getFullYear();

    // Captura UTM params automaticamente
    (function fillUTM(){
      const params = new URLSearchParams(window.location.search);
      ['utm_source','utm_medium','utm_campaign'].forEach(k => {
        const el = document.getElementById(k);
        if (el && params.get(k)) el.value = params.get(k);
      });
    })();

    // Envio via WhatsApp + backup opcional em Netlify
    const WHATS_TARGET = '5551982065175'; // Substitua por seu n√∫mero: DDI+DDD+N√öMERO (ex.: 5551999999999)

    async function handleSubmit(e){
      e.preventDefault();
      const form = e.target;
      const status = document.getElementById('form-status');
      const data = new FormData(form);
      const payload = Object.fromEntries(data.entries());

      const text = `Novo lead ‚Äì Invent√°rio Simples
` +
        `Mercado: ${payload.market || ''}
` +
        `Respons√°vel: ${payload.owner || ''}
` +
        `WhatsApp: ${payload.whats || ''}
` +
        `E-mail: ${payload.email || ''}
` +
        `Cidades/Unidades: ${payload.cities || ''}
` +
        `Dor: ${payload.pain || ''}
` +
        `UTM Source: ${payload.utm_source || ''}
` +
        `UTM Medium: ${payload.utm_medium || ''}
` +
        `UTM Campaign: ${payload.utm_campaign || ''}`;

      const waLink = `https://wa.me/${WHATS_TARGET}?text=${encodeURIComponent(text)}`;

      // Abre conversa no WhatsApp em nova aba/guia
      window.open(waLink, '_blank');

      // Backup opcional no Netlify (silencioso)
      try {
        await fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams([...data]).toString()
        });
      } catch (err) { /* opcional: ignorar erro de backup */ }

      status.className = 'mt-2 text-center text-sm font-medium text-emerald-700';
      status.textContent = 'Abrimos uma conversa no WhatsApp. Se n√£o abriu, verifique bloqueadores de pop-up.';
      status.classList.remove('hidden');
    }
  </script>
